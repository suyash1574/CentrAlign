{
  "manifest_version": 3,
  "name": "CentrAlign Agent (MVP)",
  "version": "1.0",
  "description": "Local rule-based planner + semantic + keyword tools (toy).",
  "action": {
    "default_popup": "popup.html",
    "default_title": "CentrAlign Agent"
  },
  "permissions": ["storage"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
